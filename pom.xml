	<build>
		<finalName>${project.artifactId}</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>version</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>version</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin</artifactId>
				<version>2.1.0</version>
				<configuration>
					<programs>
						<program>
							<mainClass>org.magic.api.main.MtgDesktopCompanion</mainClass>
							<name>${program.id}</name>
						</program>
						<program>
							<mainClass>org.magic.api.main.ServerLauncher</mainClass>
							<name>web-ui</name>
							<commandLineArguments>
								<commandLineArgument>"Web UI Server"</commandLineArgument>
							</commandLineArguments>
						</program>
						<program>
							<mainClass>org.magic.api.main.NetworkClient</mainClass>
							<name>net-client</name>
						</program>
						<program>
							<mainClass>org.magic.api.main.ServerLauncher</mainClass>
							<name>server-launch</name>
						</program>
						<program>
							<mainClass>org.magic.api.main.ScriptsUIClient</mainClass>
							<name>script-launch</name>
						</program>
					</programs>
					<generateRepository>true</generateRepository>
					<repositoryName>lib</repositoryName>
					<repositoryLayout>flat</repositoryLayout>
					<useWildcardClassPath>true</useWildcardClassPath>
					<includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
					<assembleDirectory>${project.build.directory}/executable
					</assembleDirectory>
					<binFileExtensions>
						<unix>.sh</unix>
					</binFileExtensions>
					<extraJvmArguments>-Xmx4096m -Dlog4j2.formatMsgNoLookups=true
						-Djdk.tls.client.protocols="TLSv1,TLSv1.1,TLSv1.2"
						-Djava.library.path="./natives"
					</extraJvmArguments>
					<showConsoleWindow>true</showConsoleWindow>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>assemble</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.2.0</version>
				<executions>
					<execution>
						<id>copy-resources-system-jar</id>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/executable/lib
							</outputDirectory>
							<resources>
								<resource>
									<directory>lib</directory>
								</resource>
